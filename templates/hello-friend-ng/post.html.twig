{% extends 'hello-friend-ng/_layout/base.html.twig' %}

{% block body_content %}
<main class="post">
    <article>
      <h1 class="post-title"><a href="{{ url('papirus_post', {slug: papirusPost.slug}) }}">{{ papirusPost.headers.title }}</a></h1>

      <div class="post-content">
        {{ papirusPost.body|raw }}
      </div>
    </article>

    <hr />

    <div class="post-info">
      <p>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file-text">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10 9 9 9 8 9"></polyline>
        </svg>
        {{ papirusPost.body|replace({'\n': ' '})|split(' ')|length }} Words
      </p>

      <p>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-calendar">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
        {{ papirusPost.headers.date|date('Y-m-d H:i') }}
      </p>
    </div>

    <hr />

    <div class="pagination">
        <div class="pagination__buttons">

            {% if papirusPostSummary.extra_data.previous_post is not null %}
            <span class="button previous">
                <a href="{{ url('papirus_post', {slug: papirusPostSummary.extra_data.previous_post.slug}) }}">
                    <span class="button__icon">←</span>
                    <span class="button__text">{{ papirusPostSummary.extra_data.previous_post.title }}</span>
                </a>
            </span>
            {% endif %}

            {% if papirusPostSummary.extra_data.next_post is not null %}
            <span class="button next">
                <a href="{{ url('papirus_post', {slug: papirusPostSummary.extra_data.next_post.slug}) }}">
                    <span class="button__text">{{ papirusPostSummary.extra_data.next_post.title }}</span>
                    <span class="button__icon">→</span>
                </a>
            </span>
            {% endif %}

        </div>
    </div>
</main>

{% endblock %}
